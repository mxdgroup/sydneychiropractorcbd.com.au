---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
		<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Book your appointment at Clinic 27 Chiropractic in Sydney CBD. Expert chiropractic care with over 30 years of experience using Advanced Biostructural Correction." />
		<meta property="og:image" content="https://sydneychiropractorcbd.com.au/logo-header.webp" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content="Clinic 27 Chiropractic Sydney CBD - Professional Chiropractic Care" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content="Book your appointment at Clinic 27 Chiropractic in Sydney CBD. Expert chiropractic care with over 30 years of experience using Advanced Biostructural Correction." />
		<meta property="twitter:image" content="https://sydneychiropractorcbd.com.au/logo-header.webp" />

		<!-- Canonical URL -->
		<link rel="canonical" href={Astro.url} />

		<!-- Additional SEO -->
		<meta name="author" content="Clinic 27 Chiropractic" />
		<meta name="keywords" content="chiropractic, Sydney CBD, back pain, neck pain, posture correction, Advanced Biostructural Correction, ABC, chiropractor, spine health, book appointment" />
		
		<!-- Schema.org markup for local business -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "MedicalBusiness",
			"name": "Clinic 27 Chiropractic",
			"image": "https://sydneychiropractorcbd.com.au/logo-header.webp",
			"description": "Professional chiropractic care in Sydney CBD using Advanced Biostructural Correction with over 30 years of experience.",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "Level 1, 27 Park Street",
				"addressLocality": "Sydney",
				"addressRegion": "NSW",
				"postalCode": "2000",
				"addressCountry": "AU"
			},
			"telephone": "+61280597743",
			"url": "https://sydneychiropractorcbd.com.au",
			"openingHours": [
				"Mo-Fr 08:00-18:00",
				"Sa 09:00-13:00"
			],
			"priceRange": "$$"
		}
		</script>
	</head>
	<body class="min-h-screen bg-white font-[Inter,system-ui,sans-serif]">
		<slot />
		<style is:global>
			/* Only CSS custom properties for booking page components */
			:root {
				--primary-blue: rgb(0, 86, 179);
				--primary-pink: rgba(223,47,109);
				--purple : rgb(32, 32, 137);
				--text-dark: #333333;
				--text-light: #ffffff;
				--link-hover: #0e1346;
			}
		</style>
	</body>
</html>