---
export interface Props {
  title: string;
  imageUrl: string;
}

const { title, imageUrl } = Astro.props;
---

<div class="p-4 h-full">
    <div class="aspect-square flex flex-col items-center justify-center p-2 text-center relative overflow-hidden h-full">
      <div class="absolute top-0 left-0 right-0 bg-custom-pink text-white py-2 px-4 z-10">
        <h3 class="font-bold text-sm truncate">{title}</h3>
      </div>
      <img src={imageUrl} alt={title} class="w-full h-full object-cover" />
    </div>
</div> 