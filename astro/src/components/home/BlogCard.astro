---
interface Props {
  imageUrl: string;
  date: string;
  title: string;
  excerpt: string;
  slug?: string;
}

const { imageUrl, date, title, excerpt, slug } = Astro.props;
const blogUrl = slug ? `/${slug}` : '#';
---

<div class="blog-card overflow-hidden shadow-xl mb-8 flex flex-col bg-white cursor-pointer">
  <div class="blog-image h-48 overflow-hidden">
    <img src={imageUrl} alt={title} class="w-full h-full object-cover">
  </div>
  <div class="blog-content p-6 flex flex-col flex-grow">
    <div class="date flex items-center text-gray-500 mb-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <span>{date}</span>
    </div>
    <h3 class="title text-xl font-semibold text-gray-800 mb-2">{title}</h3>
    <p class="excerpt text-gray-600 mb-4">{excerpt}</p>
    <a href={blogUrl} class="text-blue-600 hover:text-blue-800 font-bold mt-auto">â†’ Continue Reading</a>
  </div>
</div> 