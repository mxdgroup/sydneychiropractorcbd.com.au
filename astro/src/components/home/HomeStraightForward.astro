---
import UnderlinedHeader from "../UnderlinedHeader.astro";
import PrimaryButton from "../PrimaryButton.astro";
import ScrollCrop from "../ScrollCrop.astro";
---

<section class="relative w-full overflow-hidden" style="min-height: 70vh;">
    <!-- Background layer: ScrollCrop -->
    <ScrollCrop 
        src="https://sydneychiropractorcbd.com.au/wp-content/uploads/2021/06/straightforward-book1.jpg"
        height="70vh"
        class="absolute top-0 left-0 w-full h-full"
    />
    
    <!-- Overlay layer: White semi-transparent overlay -->
    <div class="absolute top-0 left-0 w-full h-full bg-white/70"></div>
    
    <!-- Content layer: All text and buttons -->
    <div class="absolute top-0 left-0 w-full h-full z-10 py-10 flex items-center justify-center">
        <div class="w-1/2 mx-auto flex flex-col items-center justify-center text-center">
            <h1 class="text-xl font-bold mb-4 text-custom-pink">
                Straight Forward Book
            </h1>
            <UnderlinedHeader>
                Why forward posture affects your health & how to fix it
            </UnderlinedHeader>
            <div class="mt-10">
                <PrimaryButton variant="primary">
                    <p class="text-white text-xl">Buy It Now</p>
                </PrimaryButton>
            </div>
        </div>
    </div>
</section>