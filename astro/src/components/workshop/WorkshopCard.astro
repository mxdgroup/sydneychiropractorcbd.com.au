---
interface Props {
  imageUrl: string;
  title: string;
  timeFrom: string;
  slug: string;
}

const { imageUrl, title, timeFrom, slug } = Astro.props;
const workshopUrl = `/workshops/${slug}/`;
---

<div class="workshop-card overflow-hidden shadow-xl mb-8 flex flex-col bg-white cursor-pointer relative">
  <div class="workshop-image h-48 overflow-hidden relative">
    <img src={imageUrl} alt={title} class="w-full h-full object-cover">
    <!-- Workshop tag in top right -->
    <div class="absolute top-4 right-4 bg-pink-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
      WORKSHOP
    </div>
  </div>
  <div class="workshop-content p-6 flex flex-col flex-grow">
    <h3 class="title text-xl font-semibold text-gray-800 mb-2">{title}</h3>
    <p class="time-from text-gray-600 mb-4">From – {timeFrom}</p>
    <a href={workshopUrl} class="text-pink-500 hover:text-pink-700 font-bold mt-auto">
      READ MORE »
    </a>
  </div>
</div>
