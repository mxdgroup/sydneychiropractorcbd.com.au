---
import { Image } from 'astro:assets';
import personAvatar from '../../../public/person.png';
---
<div class="py-4 text-center my-8 w-full">
    <div class="flex justify-between items-center gap-4 w-full">
        <Image src={personAvatar} alt="person" class="w-[72px] h-[72px] object-cover" />
        <h1 class="text-xl md:text-3xl font-extrabold mb-4 text-purple mt-4">Book an Appointment</h1>    
    </div>
    <div class="flex justify-center gap-4 mt-2 max-[768px]:flex-col max-[768px]:items-center max-[768px]:gap-2">
        <a href="tel:0280597743" target="_blank" class="bg-white text-purple px-4 py-2 border border-purple rounded-lg text-base font-semibold cursor-pointer transition-colors duration-300 no-underline hover:bg-purple hover:text-white max-[768px]:w-full max-[768px]:max-w-xs max-[768px]:text-sm max-[768px]:px-3 max-[768px]:py-1.5" onclick="if(typeof posthog !== 'undefined'){posthog.capture('call_us_clicked');}if(typeof gtag !== 'undefined'){gtag('event', 'call_us_clicked');}if(typeof dataLayer !== 'undefined'){dataLayer.push({'event': 'call_us_clicked'});}">I AM AN EXISTING CLIENT</a>
        <a href="tel:0280597743" target="_blank" class="bg-white text-purple px-4 py-2 border border-purple rounded-lg text-base font-semibold cursor-pointer transition-colors duration-300 no-underline hover:bg-purple hover:text-white max-[768px]:w-full max-[768px]:max-w-xs max-[768px]:text-sm max-[768px]:px-3 max-[768px]:py-1.5" onclick="if(typeof posthog !== 'undefined'){posthog.capture('call_us_clicked');}if(typeof gtag !== 'undefined'){gtag('event', 'call_us_clicked');}if(typeof dataLayer !== 'undefined'){dataLayer.push({'event': 'call_us_clicked'});}">I AM A NEW CLIENT</a>
    </div>
</div>