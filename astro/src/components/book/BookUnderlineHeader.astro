---
interface Props {
    text: string;
}

const { text } = Astro.props;
---
<div class="underline-header-container">
    <p class="underline-header">{text}</p>
    <div class="underline"></div>
</div>
<style>
    .underline-header {
        margin-top: 1.2rem;
        font-size: 1.2rem;
        color: black;
        font-weight: 700;
        text-align: center;
        text-transform: capitalize;
    }
    .underline-header-container {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .underline {
        width: 10%; 
        border-bottom: 2px solid red; 
        margin-bottom: 1.5rem;
        margin-top: 0.5rem;
    }

    @media (max-width: 480px) {
        .underline-header {
            font-size: 1.1rem;
        }
        .underline {
            width: 20%;
            margin-bottom: 0.5rem;
        }
    }
</style>