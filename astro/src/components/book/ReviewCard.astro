---
import { Image } from 'astro:assets';
interface Props {
  name: string;
  avatarSrc?: any;
  avatarInitial?: string;
  avatarColor?: string;
  rating: number;
  reviewText: string;
}

const { name, avatarSrc, avatarInitial, avatarColor = "#6a3db3", rating = 5, reviewText } = Astro.props;
---

<div class="review-card">
  <div class="review-header">
    {avatarSrc ? (
      <div class="avatar">
        <Image src={avatarSrc} alt={`Profile photo of ${name}, a patient who left a ${rating}-star review for Clinic 27 Chiropractic Sydney CBD`} />
      </div>
    ) : (
      <div class="avatar-initial" style={`background-color: ${avatarColor};`}>
        <span>{avatarInitial || name.charAt(0)}</span>
      </div>
    )}
    <h3>{name}</h3>
  </div>
  
  <div class="rating">
    {Array(rating).fill(0).map(() => (
      <span class="star">â˜…</span>
    ))}
  </div>
  
  <p class="review-text">{reviewText}</p>
</div>

<style>
  .review-card {
    background-color: white;
    border-radius: 8px;
    padding: 1.5rem;
    border:1px solid lightgray;
    width: 100%;
    display: flex;
    flex-direction: column;
    height: fit-content;
    gap: 0.75rem;
  }

  .review-header {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .avatar-initial {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
  }

  h3 {
    font-size: 1.2rem;
    margin: 0;
  }

  .rating {
    display: flex;
    gap: 0.25rem;
  }

  .star {
    color: #ffc107;
    font-size: 1.25rem;
  }

  .review-text {
    font-size: 0.95rem;
    line-height: 1.5;
    color: var(--text-dark, #333333);
    margin: 0;
  }
  @media (max-width: 480px) {
    .review-card {
      padding: 1rem;
    }
    .review-text{
      font-size: 0.8rem;
    }
    .review-header h3{
      font-size: 0.8rem;
    }
    .review-header{
      font-size: 0.8rem;
    }

    .avatar{
      width: 48px;
      height: 48px;
    }
    
    .avatar-initial{
      width: 48px;
      height: 48px;
    }
  }
</style>    
