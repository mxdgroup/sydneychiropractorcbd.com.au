---
import Ratings from "./Ratings.astro";
import { Image } from "astro:assets";

// Import the image directly to enable Astro's image optimization
import heroBackground from "../../assets/hero_bg.webp";

---

<section class="hero">
  <Image 
    src={heroBackground} 
    alt="Clinic 27 Chiropractic Sydney CBD interior view showing treatment area" 
    class="hero-background" 
    width="1920" 
    height="1080"
    loading="eager"
    decoding="async"
    fetchpriority="high"
  />
  <div class="overlay"></div>
  <div class="container">
    <div class="hero-content">
      <h1>
        Achieve Optimal Health, Happiness<br />
        and Your Full Human Potential
      </h1>
      <Ratings />

      <ul class="features">
        <li>• Over 30 years of chiropractic experience</li>
        <li>• Just minutes from where you live or work</li>
        <li>• Long-term solution to pain and discomfort with Advanced Biostructural Correction</li>
      </ul>

      <a href="tel:0280597743" target="_blank" class="cta-button">
        Call Us to Take the First Step
      </a>
    </div>
  </div>
</section>

<style is:inline>
  .hero {
    position: relative;
    min-height: 20vh;
    max-height: 80vh;
    color: white;
    padding: 1rem 0;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.1);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  h1 {
    font-size: 2.3rem;
    margin-bottom: 2rem;
    font-weight: 800;
  }

  .features {
    list-style: none;
    margin-bottom: 2rem;
  }

  .features li {
    margin-bottom: 0.6rem;
    font-size: 1rem;
  }

  .cta-button {
    display: inline-block;
    background: var(--purple);
    color: white;
    padding: 1rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: background-color 0.3s ease;
    width: 40%;
    text-align: center;
  }

  .cta-button:hover {
    background: var(--link-hover, #0e1346);
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 2rem 1rem;
    }
    
    h1 {
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
    }
    
    .features li {
      font-size: 0.9rem;
    }
    
    .cta-button {
      width: 100%;
      padding: 0.8rem 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .hero {
      padding: 1.5rem 1rem;
    }
    
    h1 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }
    
    .features {
      margin-bottom: 1.5rem;
    }
    
    .features li {
      font-size: 0.7rem;
      margin-bottom: 0.4rem;
    }
    .cta-button{
      width: 80%;
      font-size: 0.8rem;
    }
  }
</style>    