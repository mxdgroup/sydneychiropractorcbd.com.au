---
import UnderlineHeader from './BookUnderlineHeader.astro';
import YoutubeVideo from './YoutubeVideo.astro';
import BookAnAppotiment from './BookAnAppotiment.astro';
import ahmLogo from '../../assets/logo/ahm.png';
import medibankLogo from '../../assets/logo/medibank.png.webp';
import asrLogo from '../../assets/logo/asr-logo.png';
import { Image } from 'astro:assets';

const images = [
    ahmLogo,
    medibankLogo,
    asrLogo,
]
---
<section class="credentials">
    <UnderlineHeader text="Chiropractic credentials and accreditations" />
    <div class="credentials-container">
        {images.map((image, index) => {
            let altText = "Chiropractic Credentials";
            if (index === 0) altText = "AHM Health Insurance Provider Logo";
            if (index === 1) altText = "Medibank Health Insurance Provider Logo";
            if (index === 2) altText = "Australian Spinal Research Logo";
            
            return (
                <div class="credentials-item">
                    <Image src={image} alt={altText} loading="eager" />
                </div>
            );
        })}
    </div>
    <UnderlineHeader text="Better Results, Faster." />
    <div class="video-container">
        <YoutubeVideo videoId="https://www.youtube.com/embed/GrDl-8HyGBY?si=NKO2Pq6y17rmeCQD" fullWidth={true}/>
    </div>
    <div class="book-an-appointment-container">
        <BookAnAppotiment />
    </div>
</section>
<style is:inline>
    .credentials{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        width: 100%;
    }
    .credentials-container{
        display: flex;
        flex-direction: row;
        gap: 1rem;
        margin-bottom: 2rem;
        width: 60%;
    }
    .credentials-item{
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .credentials-item img{
        width: 80%;
        height: 80%;
        object-fit: contain;
    }

    .video-container{
        width: 30%;
        min-height: 300px;
    }
    @media (max-width: 480px) {
        .credentials-item img{
            width: 100%;
            height: 100%;
        }
        .credentials-container{
            width: 80%;
        }
        .video-container{
            width: 80%;
        }
        .book-an-appointment-container{
            width: 60%;
        }
    }
</style>