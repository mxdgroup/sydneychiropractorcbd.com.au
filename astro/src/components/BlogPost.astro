---
import { type CollectionEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import HeaderImage from './HeaderImage.astro';
import UnderlinedHeader from './UnderlinedHeader.astro';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

// Format date
const formattedDate = new Intl.DateTimeFormat('en-AU', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(post.data.date);

// Custom meta data mapping from CSV
const customMetaData: Record<string, { title: string; description?: string; keywords?: string }> = {
  'chiropractic-adjustment-treatments-beyond-back-pain': {
    title: 'The wonders of Chiropractic Adjustment Beyond Back Pain',
    description: 'Discover how chiropractors helps more than just back pain. See how our Sydney chiropractors treat headaches, neck pain, posture issues & boost wellness!',
    keywords: 'chiropractic adjustment'
  },
  'initial-consultation-special-offer': {
    title: 'Special Offer For Initial Consultations | Complete Chiropractic',
    description: 'New patient special offer in Sydney CBD! Get comprehensive chiropractic assessment and personalised treatment plan. Book your consultation today!',
    keywords: '/'
  },
  'posture-correction-improve-posture-with-these-tips': {
    title: 'Posture Correction Tips That Could Improve Your Life',
    description: 'Learn effective posture correction tips from Sydney\'s expert chiropractors. See how w]simple changes can dramatically improve your comfort!',
    keywords: 'posture correction tips'
  },
  'chiropractic-treatment-for-pregnancy': {
    title: 'Top Pregnancy Chiropractor | Complete Chiro Dee Why',
    description: 'Safe, gentle chiropractic care for expectant mothers in Sydney. Call us and see how we can help relieve pregnancy discomfort and support your changing body!',
    keywords: 'pregnancy chiropractor'
  },
  'sciatica-successful-treatment-at-sydney-cbd-chiropractor': {
    title: 'Chiropractor For Sciatica | Complete Chiropractic Dee Why',
    description: 'Find lasting relief from sciatica pain with our expert and gentle chiropractic treatments in Sydney CBD. Call us and get back to living without limitations!',
    keywords: 'chiropractor for sciatica'
  },
  'why-chiropractic-care-is-effective-for-back-pain': {
    title: 'Why Chiropractic Treatments Are Good For Back Pain',
    description: 'Discover why chiropractic care works so well for back pain relief. Learn how spinal adjustments provide lasting results without meds or surgery!',
    keywords: 'chiropractic treatments for back pain'
  },
  'chiropractic-help-for-headaches-and-migraines': {
    title: 'How a Chiropractor Helps With Headaches',
    description: 'Learn how chiropractors treat headaches by addressing neck tension, spinal alignment, and muscle stress that trigger pain naturally!',
    keywords: 'chiropractor for headaches'
  },
  'chiropractic-spinal-decompression-therapy': {
    title: 'Spinal Decompression Therapy | Complete Chiro Dee Why',
    description: 'Gentle spinal decompression therapy in Sydney. Non-invasive treatment for disc problems that promotes natural healing and pain relief. Call us today!',
    keywords: 'spinal decompression therapy'
  },
  'chiropratic-care-for-head-asymmetry': {
    title: 'Asymmetrical Head - Why it Happens & How to Treat It?',
    description: 'Understand what causes head asymmetry and discover gentle chiropractic techniques that help restore balance and reduce associated symptoms.',
    keywords: 'asymmetrical head'
  },
  'abc-advanced-bio-structural-correction': {
    title: 'ABC Chiropractic Care - How It Relieves Pain For Good',
    description: 'Discover how Advanced BioStructural Correction technique addresses spinal misalignments at their source for permanent pain relief and better posture.',
    keywords: 'abc chiropractic'
  },
  'spondylosis-and-ankylosing-spondylitis': {
    title: 'Ankylosing Spondylitis Vs Spondylosis: What\'s Better?',
    description: 'Learn the key differences between ankylosing spondylitis and spondylosis, plus discover which chiropractic treatments work best for each condition.',
    keywords: 'ankylosing spondylitis vs spondylosis'
  },
  'auto-accident-injury-chriropractic-care': {
    title: 'Auto Accident Chiropractor - Does it Really Help?',
    keywords: 'auto accident chiropractor'
  },
  'chiropratic-care-for-posture': {
    title: 'Chiropractor For Posture | Complete Chiro Sydney',
    description: 'Improve your posture with expert chiropractic care in Sydney. Stand taller, feel more confident, and reduce pain naturally. Call us and   see how we can help!',
    keywords: 'chiropractor for posture'
  },
  'tension-headaches-and-migraines': {
    title: 'Tension Headache Treatment - How Can it Help?',
    keywords: 'tension headache treatment sydney'
  },
  'treaatment-for-sciatica': {
    title: 'Sciatica Treatment Sydney | Expert Chiro Care',
    description: 'Expert sciatica treatment in Sydney CBD. Our personalised approach helps eliminate pain and restore normal function to your daily life. Call us today!',
    keywords: 'sciatica treatment sydney'
  }
};

// Get custom meta data or use defaults
const customMeta = customMetaData[post.slug];
const pageTitle = customMeta?.title || `${post.data.title} | Sydney Chiropractor CBD`;
const metaDescription = customMeta?.description;
const metaKeywords = customMeta?.keywords;
---

<Layout 
  title={pageTitle}
  metaDescription={metaDescription}
  metaKeywords={metaKeywords}
>
  <!-- Header Image Section -->
  <HeaderImage 
    backgroundImage={`/thumbnails/${post.data.thumbnail}`} 
    headerText={post.data.title}
    buttonText="Book an Appointment" 
    displayTextAndButton={false}
  />

  <!-- Blog Content -->
  <article class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="max-w-4xl mx-auto prose prose-lg prose-blue max-w-none">
      <UnderlinedHeader left={true}>{post.data.title}</UnderlinedHeader>
      <div class="blog-content-first">
        <Content />
      </div>
    </div>
  </article>
</Layout>

<style is:global>
  .prose {
    color: #7a7a7a;
  }
  
  /* Blog content container */
  .prose p{
    font-size: 1.2rem;
    max-width: none;
    margin-bottom: 1rem;
  }
  
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color:black;
    margin-bottom: 1rem;
  }
  
  /* Lists */
  .prose ul,
  .prose ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }
  
  .prose ul li {
    list-style-type: disc;
  }
  
  .prose ol li {
    list-style-type: decimal;
  }
  
  /* Nested lists */
  .prose ul ul,
  .prose ol ol {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
  
  /* Links */
  .prose a {
    color: #2563eb;
    text-decoration: underline;
    text-decoration-color: #93c5fd;
    transition: all 0.2s ease;
  }
  
  .prose a:hover {
    color: #1d4ed8;
    text-decoration-color: #2563eb;
  }
  
  /* Strong/Bold text */
  .prose strong {
    font-weight: 600;
    color: #111827;
  }
  
  /* Emphasis/Italic text */
  .prose em {
    font-style: italic;
    color: #1f2937;
  }
  
  /* Blockquotes */
  .prose blockquote {
    border-left: 4px solid #2563eb;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #4b5563;
    background-color: #f9fafb;
    padding: 1rem 1.5rem;
    border-radius: 0.25rem;
  }
  
  /* Code blocks */
  .prose pre {
    background-color: #1f2937;
    color: #f9fafb;
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.9rem;
    line-height: 1.5;
  }
  
  /* Inline code */
  .prose code {
    background-color: #f3f4f6;
    color: #1f2937;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
  }
  
  .prose pre code {
    background-color: transparent;
    color: inherit;
    padding: 0;
    border-radius: 0;
  }
  
  /* Tables */
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }
  
  .prose th,
  .prose td {
    border: 1px solid #d1d5db;
    padding: 0.75rem;
    text-align: left;
  }
  
  .prose th {
    background-color: #f9fafb;
    font-weight: 600;
    color: #111827;
  }
  
  /* Images */
  .prose img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem 0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  /* Horizontal rules */
  .prose hr {
    border: none;
    border-top: 2px solid #e5e7eb;
    margin: 3rem 0;
  }
  
  /* First paragraph styling */
  .prose > p:first-child {
    font-size: 1.2rem;
    color: #1f2937;
    font-weight: 400;
    margin-bottom: 2rem;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .prose {
      font-size: 1rem;
    }
    
    .prose h1 {
      font-size: 2rem;
    }
    
    .prose h2 {
      font-size: 1.75rem;
    }
    
    .prose h3 {
      font-size: 1.4rem;
    }
    
    .prose ul,
    .prose ol {
      padding-left: 1.5rem;
    }
  }
</style> 