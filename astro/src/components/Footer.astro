---
import { getCollection } from "astro:content";
import "../global.css";
import thumbnail1 from "../../public/videos/sit-better-at-work.jpg.webp";
import thumbnail2 from "../../public/videos/sitting-all-day.jpg.webp";
import { Image } from "astro:assets";

const treatments = await getCollection('treatments');

---

<footer class="relative w-full text-white" style="min-height: 40vh; background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('https://sydneychiropractorcbd.com.au/wp-content/uploads/2021/04/footerbackground-1.jpg'); background-size: cover; background-position: center;">

  <!-- Main footer content -->
  <div class="relative z-10 pt-16 md:pt-32 pb-8">
    <!-- Four column grid -->
    <div class="container mx-auto px-4">
      <!-- Mobile-only location info -->
      <div class="md:hidden mb-8">
        <div class="bg-custom-pink p-6 text-white mb-4">
          <h3 class="text-lg font-bold mb-2">Clinic 27</h3>
          <p class="text-sm mb-1">(02) 8059 7743</p>
          <p class="text-sm">Suite 1, Level 1, 44 Bridge Street, Sydney NSW 2000</p>
        </div>
        <div class="bg-custom-purple p-6 text-white">
          <h3 class="text-lg font-bold mb-2">Complete Chiropractic</h3>
          <p class="text-sm mb-1">(02) 9972 0040</p>
          <p class="text-sm">Suite 1/32 Fisher Rd, Dee Why NSW 2099</p>
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        
        <!-- Column 1: Opening Hours -->
        <div class="text-center md:text-left">
          <h3 class="text-xl font-bold mb-6 uppercase">Clinic 27 Opening Hours</h3>
          <table class="w-full">
            <tbody>
              <tr class="border-b border-gray-700">
                <td class="py-2">Monday</td>
                <td class="py-2 text-center md:text-right">8:00am - 6:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Tuesday</td>
                <td class="py-2 text-center md:text-right">8:00am - 6:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Wednesday</td>
                <td class="py-2 text-center md:text-right">8:00am - 6:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Thursday</td>
                <td class="py-2 text-center md:text-right">8:00am - 6:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Friday</td>
                <td class="py-2 text-center md:text-right">8:00am - 6:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Saturday</td>
                <td class="py-2 text-center md:text-right">9:00am - 1:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Sunday</td>
                <td class="py-2 text-center md:text-right text-[#e6007e]">Closed</td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Column 2: Useful Links -->
        <div class="text-center md:text-left">
          <h3 class="text-xl font-bold mb-6 uppercase">Useful Links</h3>
          <ul class="space-y-3">
            <li><a href="/" class="hover:text-[#e6007e] transition-colors">Home</a></li>
                            <li><a href="/back-pain-treatment/" class="hover:text-[#e6007e] transition-colors">Treatments</a></li>
            <li><a href="/workshops" class="hover:text-[#e6007e] transition-colors">Workshop</a></li>
            <li><a href="/about-clinic27" class="hover:text-[#e6007e] transition-colors">About</a></li>
            <li><a href="/blog-overview" class="hover:text-[#e6007e] transition-colors">Blog</a></li>
            <li><a href="/contact-us" class="hover:text-[#e6007e] transition-colors">Contact</a></li>
          </ul>
        </div>

        <!-- Column 3: Treatments -->
        <div class="text-center md:text-left">
          <h3 class="text-xl font-bold mb-6 uppercase">Treatments</h3>
          <ul class="space-y-3">
            {treatments.map((treatment) => (
              <li><a href={`/${treatment.slug}`} class="hover:text-[#e6007e] transition-colors">{treatment.data.title}</a></li>
            ))}
          </ul>
        </div>

        <!-- Column 4: Recent Videos -->
        <div class="text-center md:text-left">
          <h3 class="text-xl font-bold mb-6 uppercase">Recent Videos</h3>
          
          <!-- Video 1 -->
          <a class="flex items-start space-x-4 mb-4" href="/videos">
            <div class="relative flex-shrink-0" style="width: 100px;">
              <Image 
                src={thumbnail1} 
                alt="Video thumbnail" 
                class="w-full h-auto rounded"
                loading="lazy"
              />
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-8 h-8 bg-[#e6007e] rounded-full flex items-center justify-center cursor-pointer">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                  </svg>
                </div>
              </div>
            </div>
            <div class="flex-grow">
              <h4 class="font-medium text-sm">Wear your backpack correctly</h4>
              <p class="text-xs text-gray-300">Feb 27, 2018</p>
            </div>
          </a>
          
          <!-- Video 2 -->
          <a class="flex items-start space-x-4" href="/videos">
            <div class="relative flex-shrink-0" style="width: 100px;">
              <Image 
                src={thumbnail2} 
                alt="Video thumbnail" 
                class="w-full h-auto rounded"
                loading="lazy"
              />
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-8 h-8 bg-[#e6007e] rounded-full flex items-center justify-center cursor-pointer">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                  </svg>
                </div>
              </div>
            </div>
            <div class="flex-grow">
              <h4 class="font-medium text-sm">How can I sit better at work?</h4>
              <p class="text-xs text-gray-300">Feb 27, 2018</p>
            </div>
          </a>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="container mx-auto px-4 mt-12">
      <div class="border-t border-gray-700"></div>
    </div>

    <!-- Bottom bar -->
    <div class="container mx-auto px-4 mt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <!-- Copyright -->
        <div class="mb-4 md:mb-0">
          <p>&copy; Clinic 27 2025 All Rights Reserved</p>
        </div>

        <!-- Social Media Icons -->
        <div class="flex space-x-4 mb-4 md:mb-0">
          <!-- Facebook -->
          <a href="https://www.facebook.com/clinictwentyseven/" aria-label="Facebook" class="hover:text-[#e6007e] transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
            </svg>
          </a>
          <!-- YouTube -->
          <a href="https://www.youtube.com/channel/UC9hBMtr0amB5mrKbEskzTNw" aria-label="YouTube" class="hover:text-[#e6007e] transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
            </svg>
          </a>
          <!-- Instagram -->
          <a href="https://www.instagram.com/clinictwentyseven/%20/#" aria-label="Instagram" class="hover:text-[#e6007e] transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
            </svg>
          </a>
        </div>

        <!-- SEO Credit -->
        <div>
          <p>SEO by <span class="text-[#e6007e]">mxd.digital</span></p>
        </div>
      </div>
    </div>
  </div>
</footer>