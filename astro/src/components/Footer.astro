---
import "../global.css";
---

<footer class="relative w-full text-white" style="min-height: 40vh; background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('https://sydneychiropractorcbd.com.au/wp-content/uploads/2021/04/footerbackground-1.jpg'); background-size: cover; background-position: center;">

  <!-- Main footer content -->
  <div class="relative z-10 pt-16 pb-8">
    <!-- Four column grid -->
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        
        <!-- Column 1: Opening Hours -->
        <div>
          <h3 class="text-xl font-bold mb-6 uppercase">Clinic 27 Opening Hours</h3>
          <table class="w-full">
            <tbody>
              <tr class="border-b border-gray-700">
                <td class="py-2">Monday</td>
                <td class="py-2 text-right">8:00am - 6:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Tuesday</td>
                <td class="py-2 text-right">8:00am - 6:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Wednesday</td>
                <td class="py-2 text-right">8:00am - 6:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Thursday</td>
                <td class="py-2 text-right">8:00am - 6:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Friday</td>
                <td class="py-2 text-right">8:00am - 6:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Saturday</td>
                <td class="py-2 text-right">9:00am - 1:00pm</td>
              </tr>
              <tr class="border-b border-gray-700">
                <td class="py-2">Sunday</td>
                <td class="py-2 text-right text-[#e6007e]">Closed</td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Column 2: Useful Links -->
        <div>
          <h3 class="text-xl font-bold mb-6 uppercase">Useful Links</h3>
          <ul class="space-y-3">
            <li><a href="/" class="hover:text-[#e6007e] transition-colors">Home</a></li>
            <li><a href="/treatments" class="hover:text-[#e6007e] transition-colors">Treatments</a></li>
            <li><a href="/workshop" class="hover:text-[#e6007e] transition-colors">Workshop</a></li>
            <li><a href="/about" class="hover:text-[#e6007e] transition-colors">About</a></li>
            <li><a href="/blog" class="hover:text-[#e6007e] transition-colors">Blog</a></li>
            <li><a href="/contact" class="hover:text-[#e6007e] transition-colors">Contact</a></li>
          </ul>
        </div>

        <!-- Column 3: Treatments -->
        <div>
          <h3 class="text-xl font-bold mb-6 uppercase">Treatments</h3>
          <ul class="space-y-3">
            <li><a href="/treatments/vertigo" class="hover:text-[#e6007e] transition-colors">Vertigo Treatment in Sydney</a></li>
            <li><a href="/treatments/chiropractic" class="hover:text-[#e6007e] transition-colors">Expert Chiropractic Care</a></li>
            <li><a href="/treatments/back-pain" class="hover:text-[#e6007e] transition-colors">Back Pain Chiropractor</a></li>
            <li><a href="/treatments/neck-pain" class="hover:text-[#e6007e] transition-colors">Neck Pain Chiropractor</a></li>
            <li><a href="/treatments/headache" class="hover:text-[#e6007e] transition-colors">Headache/Migraines</a></li>
            <li><a href="/treatments/posture" class="hover:text-[#e6007e] transition-colors">Posture Chiropractor</a></li>
            <li><a href="/treatments/sciatica" class="hover:text-[#e6007e] transition-colors">Sciatica Treatment</a></li>
          </ul>
        </div>

        <!-- Column 4: Recent Videos -->
        <div>
          <h3 class="text-xl font-bold mb-6 uppercase">Recent Videos</h3>
          
          <!-- Video 1 -->
          <div class="mb-6">
            <div class="relative mb-2">
              <img 
                src="https://via.placeholder.com/300x200" 
                alt="Video thumbnail" 
                class="w-full h-auto rounded"
              />
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-12 h-12 bg-[#e6007e] rounded-full flex items-center justify-center cursor-pointer">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                  </svg>
                </div>
              </div>
            </div>
            <h4 class="font-medium">Chiropractic Adjustment Techniques</h4>
            <p class="text-sm text-gray-300">April 15, 2023</p>
          </div>
          
          <!-- Video 2 -->
          <div>
            <div class="relative mb-2">
              <img 
                src="https://via.placeholder.com/300x200" 
                alt="Video thumbnail" 
                class="w-full h-auto rounded"
              />
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-12 h-12 bg-[#e6007e] rounded-full flex items-center justify-center cursor-pointer">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                  </svg>
                </div>
              </div>
            </div>
            <h4 class="font-medium">Relieving Back Pain at Home</h4>
            <p class="text-sm text-gray-300">March 28, 2023</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="container mx-auto px-4 mt-12">
      <div class="border-t border-gray-700"></div>
    </div>

    <!-- Bottom bar -->
    <div class="container mx-auto px-4 mt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <!-- Copyright -->
        <div class="mb-4 md:mb-0">
          <p>&copy; Clinic 27 2025 All Rights Reserved</p>
        </div>

        <!-- Social Media Icons -->
        <div class="flex space-x-4 mb-4 md:mb-0">
          <!-- Facebook -->
          <a href="#" aria-label="Facebook" class="hover:text-[#e6007e] transition-colors">
