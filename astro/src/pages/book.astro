  </head>
  <body class="overflow-x-hidden">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WZLQ9N7"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    
    <div id="normal-nav" class="hidden">
      <Header />
      <Nav />
    </div>
    <div id="book-nav">
      <BookNav />
    </div>
    
    <script>
      // Switch between book nav and normal nav
      document.addEventListener('DOMContentLoaded', () => {
        const bookNav = document.getElementById('book-nav');
        const normalNav = document.getElementById('normal-nav');
        const menuButton = document.getElementById('menu-button');
        const hamburger = document.getElementById('hamburger');
        
        const showNormalNav = () => {
          if (bookNav && normalNav) {
            bookNav.classList.add('hidden');
            normalNav.classList.remove('hidden');
          }
        };
        
        menuButton?.addEventListener('click', showNormalNav);
        hamburger?.addEventListener('click', showNormalNav);
      });
    </script>
    
    <!-- Left Links -->
    
    <main class="overflow-x-hidden">
      <BookHero />
      <Credentials />
      <SalesPitch />
      <MainSection/>
      <WhatElseWeOffer/>
      <FAQ/>
      <BookFooter/>
    </main>
    
    <div class="h-40 relative hidden md:flex justify-center pt-10">
      <div class="mx-auto z-10 grid grid-cols-2 text-white w-2/3 2xl:w-2/5">
        <div class="bg-custom-pink p-10 flex flex-col justify-center items-start ">
          <h1 class="text-xl font-bold mb-4">Clinic 27</h1>
          <p class="text-md mb-2">
            <a
              href="tel:0280597743"
              class="hover:text-white transition-colors"
              onclick="if(typeof posthog !== 'undefined'){posthog.capture('call_us_clicked');}if(typeof gtag !== 'undefined'){gtag('event', 'call_us_clicked');}if(typeof dataLayer !== 'undefined'){dataLayer.push({'event': 'call_us_clicked'});}"
            >
              (02) 8059 7743
            </a>
          </p>
          <p class="text-md">
            Suite 1, Level 1, 44 Bridge Street, Sydney NSW 2000
          </p>
        </div>
        <div class="bg-custom-purple p-10 flex flex-col justify-center items-start ">
          <h1 class="text-xl font-bold mb-4">Complete Chiropractic</h1>
          <p class="text-md mb-2">
            <a
              href="tel:0299720040"
              class="hover:text-white transition-colors"
              onclick="if(typeof posthog !== 'undefined'){posthog.capture('call_us_clicked');}if(typeof gtag !== 'undefined'){gtag('event', 'call_us_clicked');}if(typeof dataLayer !== 'undefined'){dataLayer.push({'event': 'call_us_clicked'});}"
            >
              (02) 9972 0040
            </a>
          </p>
          <p class="text-md">
            Suite 1/32 Fisher Rd, Dee Why NSW 2099
          </p>
        </div>
      </div>
    </div>
    <Footer />
  </body>
</html>
