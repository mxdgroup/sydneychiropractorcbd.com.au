            <div class="mt-20">
                <UnderlinedHeader left={true}>{part.title}</UnderlinedHeader>
                <div class="mt-10"></div>
                <Paragraphs paragraphs={
                part.paragraphs} 
                left={index % 2 === 0 ? true : false}/>
